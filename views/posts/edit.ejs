<% var o = obj.posts[0] %>
<div id="ctnr">
  <div class="form-ctnr">
    <form name="update" action="/posts/<%= req.params.id %>/update" method="post">
      <div><label>post id:</label><span><%= (o.id) ? o.id : '' %></span></div>
      <div><label>title:</label><input type="text" name="title" value="<%= (o.title) ? o.title : '' %>"/></div>
      <div><label>content:</label><input type="text" name="content" value="<%= (o.content) ? o.content : '' %>"/></div>
      <div><label>tags:</label><input type="text" name="tags" placeholder="a,b,c" value="<%= (o.tags) ? o.tags : '' %>"/></div>
      <input class="fr" type="submit" value="Submit"><a href="/posts" class="cncl fr">Cancel</a>
      <div class="clr"></div>
    </form>
  </div>
</div>